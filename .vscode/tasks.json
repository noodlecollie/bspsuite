{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "zig",
			"args": [
				"build",
				"-Doptimize=Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$zig",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build (Release)",
			"type": "shell",
			"command": "zig",
			"args": [
				"build",
				"-Doptimize=ReleaseSmall"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$zig",
		},
		{
			"label": "Build and run tests",
			"type": "shell",
			"command": "zig",
			"args": [
				"build",
				"test"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$zig",
		}
	]
}
